{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/config/*.json",
        "src/config/package_config.json"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}